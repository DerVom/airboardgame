{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings":{
    "react": {
      "version": "detect"
    },
  },
  "parser": "babel-eslint",
  "rules": {
    "semi": "error",
    "react/prop-types": "off"
  },
  "plugins": ["react-hooks"],
  "extends": [
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended"
  ]
}
